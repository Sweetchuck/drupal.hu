{
    "name": "drupalhu/drupalhu",
    "type": "project",
    "description": "Code base of drupal.hu.",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "process-timeout": 0,
        "sort-packages": true
    },
    "repositories": {
        "cheppers/drupal-behat-contexts": {
            "type": "git",
            "url": "https://github.com/Cheppers/drupal-behat-contexts.git"
        },
        "drupal/marvin": {
            "type": "git",
            "url": "https://github.com/Sweetchuck/drupal-marvin.git"
        },
        "drupal/marvin_product": {
            "type": "git",
            "url": "https://github.com/Sweetchuck/drupal-marvin_product.git"
        },
        "drupal/marvin_acquia": {
            "type": "git",
            "url": "https://github.com/Sweetchuck/drupal-marvin_acquia.git"
        },
        "drupal-8": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "asset-packagist": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    },
    "require": {
        "php": ">=7.3",
        "bower-asset/jquery-ui-slider-pips": "^1.11",
        "composer/installers": "^1.6",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/acquia_connector": "^1.16",
        "drupal/admin_toolbar": "^1.24",
        "drupal/adminimal_admin_toolbar": "^1.8",
        "drupal/adminimal_theme": "^1.3",
        "drupal/allowed_formats": "^1.1",
        "drupal/bootstrap_layouts": "dev-5.x",
        "drupal/components": "^1.1",
        "drupal/core-recommended": "^8.8",
        "drupal/entity_legal": "dev-2.x#9a8520a",
        "drupal/eu_cookie_compliance": "^1.5",
        "drupal/facets": "^1.4",
        "drupal/marvin": "dev-8.x-1.x",
        "drupal/marvin_product": "dev-8.x-1.x",
        "drupal/metatag": "^1.8",
        "drupal/pathauto": "^1.4",
        "drupal/radix": "dev-4.x",
        "drupal/schema_metatag": "^1.3",
        "drupal/search_api_solr": "^1.2",
        "drupal/taxonomy_facets": "^1.0@RC",
        "drush/drush": "^10.1",
        "oomphinc/composer-installers-extender": "^1.1",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "behat/mink-goutte-driver": "^1.2",
        "behat/mink-selenium2-driver": "^1.3",
        "bex/behat-screenshot": "^1.2",
        "cheppers/drupal-behat-contexts": "dev-master",
        "danielstjules/stringy": "^3.1",
        "dmore/behat-chrome-extension": "^1.2",
        "drupal/devel": "^2.1",
        "drupal/marvin_acquia": "dev-8.x-1.x",
        "drupal/migrate_dc": "1.x-dev",
        "drupal/migrate_plus": "^4.1",
        "drupal/migrate_tools": "^4.1",
        "drupal/module_filter": "^3.1",
        "drupal/styleguide": "dev-1.x",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^7.5",
        "symfony/css-selector": "^4.1",
        "symfony/phpunit-bridge": "^5.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "autoload-dev": {
        "psr-4": {
            "DrupalHu\\DrupalHu\\Tests\\Unit\\": "tests/src/Unit/",
            "Drush\\Commands\\app\\": "drush/Commands/custom/app/"
        }
    },
    "scripts": {
        "post-install-cmd": "\\Drupal\\marvin\\Composer\\Scripts::postInstallCmd",
        "post-update-cmd": "\\Drupal\\marvin\\Composer\\Scripts::postUpdateCmd",
        "clean": [
            "@clean:backend",
            "@clean:frontend"
        ],
        "clean:backend": [
            "rm -rf bin/ vendor/",
            "rm -rf docroot/core/ docroot/modules/contrib/ docroot/profiles/contrib/ docroot/themes/contrib/ docroot/libraries/",
            "rm -rf drush/Commands/contrib/"
        ],
        "clean:frontend": [
            "rm -rf docroot/themes/custom/*/node_modules/",
            "rm -rf docroot/themes/custom/*/assets/",
            "rm -rf docroot/themes/custom/*/css/*.css",
            "rm -rf docroot/themes/custom/*/css/*.css.map"
        ],
        "reset": [
            "@reset:search",
            "@reset:files",
            "@reset:db"
        ],
        "reset:files": [
            "rm -rf docroot/sites/*/files/*",
            "rm -rf sites/*/php_storage/twig/*",
            "rm -rf sites/*/private/*",
            "rm -rf sites/*/temporary/*"
        ],
        "reset:db": [
            "drush --ansi --config=drush --yes @app.local sql:drop"
        ],
        "reset:search": [
            "drush --ansi --config=drush --yes @app.local search-api:server-clear general || true"
        ],
        "site:install:local:legacy": [
            "@reset",
            "bin/drush --ansi --config=drush @app.local site:install appp --existing-config --marvin-migrate='' --yes",
            "bin/drush --ansi --config=drush @app.local marvin:toggle-modules --define=marvin.environment=local -vvv",
            "bin/drush --ansi --config=drush @app.local migrate:import app_legacy__user__user",
            "bin/drush --ansi --config=drush @app.local migrate:import --group=app_legacy",
            "bin/drush --ansi --config=drush @app.local migrate:import --group=app_common"
        ],
        "site:install:local:default": [
            "@reset",
            "bin/drush --ansi --config=drush @app.local site:install appp --existing-config --marvin-migrate='' --yes",
            "bin/drush --ansi --config=drush @app.local marvin:toggle-modules --define=marvin.environment=local -vvv",
            "bin/drush --ansi --config=drush @app.local migrate:import --group=app_default",
            "bin/drush --ansi --config=drush @app.local migrate:import --group=app_common"
        ],
        "site:install:local:dummy": [
            "@reset",
            "bin/drush --ansi --config=drush @app.local site:install appp --existing-config --marvin-migrate='' --yes",
            "bin/drush --ansi --config=drush @app.local marvin:toggle-modules --define=marvin.environment=local -vvv",
            "bin/drush --ansi --config=drush @app.local migrate:import --group=app_default",
            "bin/drush --ansi --config=drush @app.local migrate:import --group=app_common",
            "bin/drush --ansi --config=drush @app.local migrate:import --group=app_dummy"
        ],
        "site:install:prod:default": [
            "@reset",
            "bin/drush --ansi --config=drush @app.local site:install appp --existing-config --marvin-migrate='default' --yes"
        ],
        "site:install:prod:dummy": [
            "@reset",
            "bin/drush --ansi --config=drush @app.local site:install appp --existing-config --marvin-migrate='dummy' --yes"
        ]
    },
    "scripts-descriptions": {
        "clean": "Combines <comment>@clean:backend</comment> and <comment>@clean:frontend</comment>",
        "clean:backend": "Deletes all backend related third-party and generated codes",
        "clean:frontend": "Deletes all frontend related third-party and generated codes",
        "reset": "Combines <fg=red>@reset:files</> and <fg=red>@reset:db</>",
        "reset:files": "<fg=red>Deletes</> all the files in the <info>public</info> and the <info>private</info> directories.",
        "reset:db": "<fg=red>Drops</> all the table in the <info>default database</info>.",
        "site:install:local:legacy": "Runs <info>`drush site:install`</info>; Toggle modules for <info>local</info> environment; Migrates <info>legacy</info> contents",
        "site:install:local:default": "Runs <info>`drush site:install`</info>; Toggle modules for <info>local</info> environment; Migrates <info>default</info> contents",
        "site:install:local:dummy": "Runs <info>`drush site:install`</info>; Toggle modules for <info>local</info> environment; Migrates <info>dummy</info> contents",
        "site:install:prod:default": "Runs <info>`drush site:install`</info>; Toggle modules for <info>prod</info> environment; Migrates <info>default</info> contents",
        "site:install:prod:dummy": "Runs <info>`drush site:install`</info>; Toggle modules for <info>prod</info> environment; Migrates <info>dummy</info> contents"
    },
    "extra": {
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "docroot/libraries/slick": [
                "npm-asset/slick-carousel"
            ],
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patches": {
            "drupal/entity_legal": {
                "https://www.drupal.org/project/entity_legal/issues/2544248 - Increase length of the 'acceptance_label' field to 1024": "https://www.drupal.org/files/issues/entity_legal-acceptance_label_too_short-2544248-3.patch",
                "https://www.drupal.org/project/entity_legal/issues/2957951 - Migrate source_module property": "https://www.drupal.org/files/issues/2018-10-04/2957951-migrate-issue.patch"
            }
        },
        "drupal-scaffold": {
            "excludes": [
                "sites/example.settings.local.php",
                ".csslintrc",
                ".editorconfig",
                ".eslintignore",
                ".eslintrc.json",
                ".gitattributes",
                ".ht.router.php",
                "web.config"
            ],
            "initial": {
                "sites/default/default.services.yml": "sites/default/services.yml",
                "sites/default/default.settings.php": "sites/default/settings.php"
            }
        }
    }
}
